<!-- Footer Component -->
<footer class="bg-gray-800 text-white py-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- About -->
      <div>
        <h3 class="text-lg font-bold mb-4">
          <i class="fas fa-heart text-pink-500 mr-2"></i><%= config.appName %>
        </h3>
        <p class="text-gray-300 text-sm"><%= config.appDescription %></p>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Liên kết nhanh</h4>
        <ul class="space-y-2 text-sm">
          <li><a href="/about" class="text-gray-300 hover:text-pink-400 transition-colors">Về chúng tôi</a></li>
          <li><a href="/programs" class="text-gray-300 hover:text-pink-400 transition-colors">Chương trình</a></li>
          <li><a href="/news/reports" class="text-gray-300 hover:text-pink-400 transition-colors">Báo cáo minh bạch</a></li>
          <li><a href="/donate" class="text-gray-300 hover:text-pink-400 transition-colors">Đóng góp</a></li>
        </ul>
      </div>
      
      <!-- Contact -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Liên hệ</h4>
        <ul class="space-y-2 text-sm text-gray-300">
          <li><i class="fas fa-envelope mr-2"></i><%= config.social.email %></li>
          <li class="flex space-x-4 mt-4">
            <a href="<%= config.social.facebook %>" class="text-2xl hover:text-pink-400 transition-colors">
              <i class="fab fa-facebook"></i>
            </a>
            <a href="<%= config.social.youtube %>" class="text-2xl hover:text-pink-400 transition-colors">
              <i class="fab fa-youtube"></i>
            </a>
          </li>
        </ul>
      </div>
    </div>
    
    <div class="border-t border-gray-700 mt-8 pt-6 text-center text-sm text-gray-400">
      <p>&copy; <%= new Date().getFullYear() %> <%= config.appFullName %>. All rights reserved.</p>
    </div>
  </div>
</footer>
