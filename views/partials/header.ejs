<header class="sticky top-0 z-50 bg-surface-light dark:bg-surface-dark shadow-md">
  <!-- Top Bar -->
  <div class="bg-primary text-white py-2 text-sm hidden lg:block">
    <div class="container mx-auto px-4 flex justify-between items-center">
      <div class="flex space-x-6">
        <a href="mailto:contact@bonghongnho.org.vn" class="flex items-center hover:text-green-200 transition">
          <span class="material-icons text-base mr-2">email</span>
          contact@bonghongnho.org.vn
        </a>
        <a href="tel:+84123456789" class="flex items-center hover:text-green-200 transition">
          <span class="material-icons text-base mr-2">phone</span>
          (+84) 123 456 789
        </a>
      </div>
      <div class="flex space-x-4">
        <a class="hover:text-green-200 transition opacity-90 hover:opacity-100" href="https://facebook.com" target="_blank" rel="noopener noreferrer" aria-label="Facebook">
          <span class="material-icons text-base">facebook</span>
        </a>
        <a class="hover:text-green-200 transition opacity-90 hover:opacity-100" href="https://youtube.com" target="_blank" rel="noopener noreferrer" aria-label="YouTube">
          <span class="material-icons text-base">smart_display</span>
        </a>
        <button id="dark-mode-toggle" data-dark-mode-toggle class="hover:text-green-200 transition opacity-90 hover:opacity-100" aria-label="Toggle Dark Mode">
          <span class="material-icons text-base">dark_mode</span>
        </button>
      </div>
    </div>
  </div>

  <!-- Main Navigation -->
  <div class="container mx-auto px-4 py-3 lg:py-4">
    <div class="flex justify-between items-center">
      <!-- Logo -->
      <a class="flex items-center space-x-3 group" href="/">
        <div class="w-10 h-10 lg:w-14 lg:h-14 rounded-full bg-secondary flex items-center justify-center text-white font-bold text-lg lg:text-2xl shadow-lg group-hover:bg-primary transition-colors duration-300 shrink-0">
          LRF
        </div>
        <div class="flex flex-col">
          <span class="font-display font-bold text-base lg:text-xl text-primary dark:text-white leading-tight uppercase">
            Quỹ Bông Hồng Nhỏ
          </span>
          <span class="text-[10px] lg:text-xs text-gray-500 dark:text-gray-400 font-body tracking-widest uppercase">
            Little Rose Foundation
          </span>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center space-x-1">
        <a class="px-4 py-2 text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary transition rounded-lg <%= currentPath === '/' ? 'text-primary font-semibold' : '' %>" href="/">
          Trang chủ
        </a>
        <a class="px-4 py-2 text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary transition rounded-lg <%= currentPath.startsWith('/about') ? 'text-primary font-semibold' : '' %>" href="/about">
          Giới thiệu
        </a>
        <a class="px-4 py-2 text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary transition rounded-lg <%= currentPath.startsWith('/programs') ? 'text-primary font-semibold' : '' %>" href="/programs">
          Chương trình
        </a>
        <a class="px-4 py-2 text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary transition rounded-lg <%= currentPath.startsWith('/news') ? 'text-primary font-semibold' : '' %>" href="/news">
          Tin tức
        </a>
        <a class="px-4 py-2 text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary transition rounded-lg <%= currentPath.startsWith('/finance') ? 'text-primary font-semibold' : '' %>" href="/finance">
          Tài chính
        </a>
        <a class="px-4 py-2 text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary transition rounded-lg <%= currentPath.startsWith('/contact') ? 'text-primary font-semibold' : '' %>" href="/contact">
          Liên hệ
        </a>
        <a class="ml-4 btn-secondary" href="/donate">
          Quyên góp
        </a>
      </nav>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" data-mobile-menu-toggle class="lg:hidden p-2 text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary transition" aria-label="Menu">
        <span class="material-icons">menu</span>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <nav id="mobile-menu" data-mobile-menu class="hidden lg:hidden mt-4 pb-4 border-t dark:border-gray-700">
      <div class="flex flex-col space-y-2 mt-4">
        <a class="px-4 py-2 text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg transition <%= currentPath === '/' ? 'text-primary font-semibold bg-gray-50 dark:bg-gray-800' : '' %>" href="/">
          Trang chủ
        </a>
        <a class="px-4 py-2 text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg transition <%= currentPath.startsWith('/about') ? 'text-primary font-semibold bg-gray-50 dark:bg-gray-800' : '' %>" href="/about">
          Giới thiệu
        </a>
        <a class="px-4 py-2 text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg transition <%= currentPath.startsWith('/programs') ? 'text-primary font-semibold bg-gray-50 dark:bg-gray-800' : '' %>" href="/programs">
          Chương trình
        </a>
        <a class="px-4 py-2 text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg transition <%= currentPath.startsWith('/news') ? 'text-primary font-semibold bg-gray-50 dark:bg-gray-800' : '' %>" href="/news">
          Tin tức
        </a>
        <a class="px-4 py-2 text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg transition <%= currentPath.startsWith('/finance') ? 'text-primary font-semibold bg-gray-50 dark:bg-gray-800' : '' %>" href="/finance">
          Tài chính
        </a>
        <a class="px-4 py-2 text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg transition <%= currentPath.startsWith('/contact') ? 'text-primary font-semibold bg-gray-50 dark:bg-gray-800' : '' %>" href="/contact">
          Liên hệ
        </a>
        <a class="btn-secondary text-center" href="/donate">
          Quyên góp
        </a>
      </div>
    </nav>
  </div>
</header>
