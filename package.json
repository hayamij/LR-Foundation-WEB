{
  "name": "lr-foundation-web",
  "version": "2.0.0",
  "description": "Website Quỹ Bông Hồng Nhỏ - Little Roses Foundation",
  "main": "server.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:server": "nodemon server.js",
    "dev:assets": "webpack --watch --mode development",
    "build": "npm-run-all build:*",
    "build:assets": "webpack --mode production",
    "build:css": "tailwindcss -i ./src/assets/css/input.css -o ./public/dist/css/styles.css --minify",
    "start": "node server.js",
    "watch:css": "tailwindcss -i ./src/assets/css/input.css -o ./public/dist/css/styles.css --watch"
  },
  "keywords": [
    "charity",
    "foundation",
    "nonprofit",
    "donation",
    "vietnamese"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hayamij/LR-Foundation-WEB.git"
  },
  "author": "LR Foundation Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hayamij/LR-Foundation-WEB/issues"
  },
  "homepage": "https://github.com/hayamij/LR-Foundation-WEB#readme",
  "dependencies": {
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "compression": "^1.7.4",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "postcss": "^8.4.32",
    "postcss-loader": "^7.3.3",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "mini-css-extract-plugin": "^2.7.6",
    "terser-webpack-plugin": "^5.3.9",
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
